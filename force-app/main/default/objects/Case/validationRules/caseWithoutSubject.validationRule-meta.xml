<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>caseWithoutSubject</fullName>
    <active>true</active>
    <description>Does not allow to create a case without a subject.</description>
    <errorConditionFormula>ISBLANK(Subject)</errorConditionFormula>
    <errorDisplayField>Subject</errorDisplayField>
    <errorMessage>Please, inform the case subject!</errorMessage>
</ValidationRule>
